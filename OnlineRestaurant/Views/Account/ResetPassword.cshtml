@using OnlineRestaurant.ViewModels
@model ResetPasswordViewModel

<head>
    <style>
         body {
            background-color: #92ba92;
         }

         .form-container{
            background-color: #fff;
         }

         .form-container label{
            color: #525e75; 
         }
 
    </style>
</head>
<body>
   <div class="container mx-auto">
    <h1 class="text-white text-center">Reset Password</h1>
        <form asp-controller="Account" asp-action="ResetPassword" method="post" role="form"  class="form-container p-5 m-5">
              <input asp-for="Code" hidden />
                    <div class="form-group row pb-3">
                        <label asp-for="Email" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control"  placeholder="Enter Email"  />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row pb-3">
                        <label asp-for="Password" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="form-group row pb-3">
                        <label asp-for="ConfirmPassword" class="col-md-2 col-form-label"></label>
                        <div class="col-md-10">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group bp-3">
                          <div class="offset-md-2 col-md-10">
                            <button type="submit" class="btn btn-success form-control">Submit</button>
                        </div>
                    </div>
        </form>
</div>
</body>
