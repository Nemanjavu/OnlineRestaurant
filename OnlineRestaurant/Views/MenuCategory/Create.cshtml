@model MenuCategory

@{
    ViewData["Title"] = "Add a new category";
}


<head>
    <style>
         body {
            background-color: #92ba92;
         }

         .form-container{
            background-color: #fff;
         }

         .form-container label{
            color: #525e75; 
         }
    </style>
</head>
<body>
    <div class="container mx-auto form-container p-5">
        <div class="row text"> 
            <div class="col-md-8 offset-2">
                <h2 class="text-dark text-center">Add a New Category</h2>
                <div class="row">
                    <div class="col-md-8 offset-2">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group text-center">
                                <img id="CinemaLogoPreview"  class="border-info rounded-circle" style="max-width: 150px" />
                            </div>
                    
                            <div class="form-group pb-3">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group pb-3">
                                <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                                <a class="btn btn-outline-secondary" asp-action="Index">Back to Categories</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>