@model MenuItem

@{
    ViewData["Title"] = "Delete menu item";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.MenuName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                    

                 @*   <div class="form-group text-center">
                        <img id="CinemaLogoPreview"  class="border-info rounded-circle" style="max-width: 150px" />
                    </div>*@
                    
                    <div class="form-group">
                        <label asp-for="MenuName" class="control-label"></label>
                        <input asp-for="MenuName" class="form-control" readonly/>
                        <span asp-validation-for="MenuName" class="text-danger"></span>
                    </div>
                    

                    <div class="form-group">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                
            </div>
        </div>
    </div>
</div>